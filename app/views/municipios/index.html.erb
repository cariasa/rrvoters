<h1>Listing Municipios</h1>

<table>
  <thead>
    <tr>
      <th>Codigo municipio</th>
      <th>Nombre municipio</th>
      <th>Departamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @municipios.each do |municipio| %>
      <tr>
        <td><%= municipio.codigo_municipio %></td>
        <td><%= municipio.nombre_municipio %></td>
        <td><%= municipio.departamento.nombre_departamento %></td>
        <td><%= link_to 'Show', departamento_municipios_path(@departamento) %></td>
        <td><%= link_to 'Edit', edit_departamento_municipio_path(@departamento, municipio) %></td>
        <td><%= link_to 'Destroy', departamento_municipios_path(@departamento), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

