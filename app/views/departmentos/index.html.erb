<p id="notice"><%= notice %></p>

<h1>Listing Departmentos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo departamento</th>
      <th>Nombre departamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departmentos.each do |departmento| %>
      <tr>
        <td><%= departmento.codigo_departamento %></td>
        <td><%= departmento.nombre_departamento %></td>
        <td><%= link_to 'Show', departmento %></td>
        <td><%= link_to 'Edit', edit_departmento_path(departmento) %></td>
        <td><%= link_to 'Destroy', departmento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

